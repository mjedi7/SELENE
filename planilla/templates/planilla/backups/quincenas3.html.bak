{% extends 'planilla/menu.html' %}
{% load static %}

{% block content %}
<div class="container mt-4">
    <h2>Buscar Quincenas</h2>

    <!-- Formulario para ingresar la CLAVE -->
    <form method="get" class="mb-4">
        <div class="input-group">
            <input type="text" name="clave" class="form-control" placeholder="Ingresa la CLAVE del trabajador" required>
            <button type="submit" class="btn btn-primary">Buscar</button>
        </div>
    </form>

    {% if resultado.filas %}
        <h4>Información del trabajador</h4>
        <table id="tablaPlanilla" class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th>CLAVE</th>
                    <th>NOMBRE</th>
                    <th>ADSCRIPCION</th>
                    <th>FECHA DE INGRESO</th>
                    <th>SITUACION ADM</th>
                </tr>
            </thead>
            <tbody>
                {% for fila in resultado.filas %}
                <tr>
                    <td>{{ fila.0 }}</td>
                    <td>{{ fila.1 }}</td>
                    <td>{{ fila.2 }}</td>
                    <td>{{ fila.3 }}</td>
                    <td>{{ fila.4 }}</td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
    {% else %}
        <div class="alert alert-warning">No se encontró el trabajador con esa CLAVE.</div>
    {% endif %}
    
{% if resultado.quincenas %}
    <h4 class="mt-4">Quincenas</h4>
    <table id="tablaQuincenas" class="table table-striped table-bordered">
        <thead>
            <tr>
                {% for col in resultado.quincenas.columnas %}
                    <th>{{ col }}</th>
                {% endfor %}
            </tr>
        </thead>
        <tbody>
            {% for fila in resultado.quincenas.filas %}
                <tr>
                    {% for valor in fila %}
                        <td>{{ valor }}</td>
                    {% endfor %}
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endif %}

<script>
$(document).ready(function() {
    $('#tablaQuincenas').DataTable({
        paging: false,
        searching: false,
        info: false,
        scrollX: true
    });
});
</script>
    
    
</div>

<!-- Scripts de Bootstrap y DataTables -->
<link rel="stylesheet" href="https://cdn.datatables.net/1.13.6/css/dataTables.bootstrap5.min.css">
<script src="https://code.jquery.com/jquery-3.7.0.min.js"></script>
<script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
<script src="https://cdn.datatables.net/1.13.6/js/dataTables.bootstrap5.min.js"></script>

<script>
$(document).ready(function() {
    $('#tablaPlanilla').DataTable({
        paging: false,
        searching: false,
        info: false
    });
});
</script>
{% endblock %}